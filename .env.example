# Environment Configuration for Physics Database

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///physdb.db
# For MySQL: DATABASE_URL=mysql+pymysql://username:password@localhost/physdb
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/physdb

# Application Settings
ITEMS_PER_PAGE=20
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes

# Email Configuration (optional, for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=physdb.log

# Compliance Testing Defaults
DEFAULT_AUDIT_FREQUENCY=12  # months
OVERDUE_WARNING_DAYS=30
CRITICAL_OVERDUE_DAYS=90

# File Storage
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls